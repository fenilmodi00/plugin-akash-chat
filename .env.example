# Required: Akash Chat API Key
AKASH_CHAT_API_KEY=

# Model Configuration
# Specify which models to use for different capabilities
AKASH_CHAT_SMALL_MODEL=Meta-Llama-3-1-8B-Instruct-FP8
AKASH_CHAT_MEDIUM_MODEL=Meta-Llama-3-2-3B-Instruct
AKASH_CHAT_LARGE_MODEL=Meta-Llama-3-3-70B-Instruct

# Embedding Configuration
AKASHCHAT_EMBEDDING_MODEL=BAAI-bge-large-en-v1-5
AKASHCHAT_EMBEDDING_DIMENSIONS=1024

# Optional: Cloudflare Gateway Configuration
# Set to 'true' to enable Cloudflare AI Gateway
CLOUDFLARE_GW_ENABLED=false
# Only needed if CLOUDFLARE_GW_ENABLED is true
# CLOUDFLARE_AI_ACCOUNT_ID=your_cloudflare_account_id
# CLOUDFLARE_AI_GATEWAY_ID=your_cloudflare_gateway_id

# Optional: Debug Settings
# DEBUG=true
# LOG_LEVEL=debug